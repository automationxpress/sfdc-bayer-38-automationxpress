<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(OR(ISBLANK(Phone__c ),REGEX( Phone__c , &quot;^[+](?:[0-9()-]\\s?){6,14}[0-9]{1}+$&quot;)))</errorConditionFormula>
    <errorDisplayField>Phone__c</errorDisplayField>
    <errorMessage>Please add the phone in the correct format</errorMessage>
</ValidationRule>
