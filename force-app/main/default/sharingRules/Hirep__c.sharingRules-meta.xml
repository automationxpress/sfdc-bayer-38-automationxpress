        <accessLevel>Edit</accessLevel>
        <description>Share the Hirep records to request managers of MAPV ACDL</description>
        <label>Share Hirep to MAPV ACDL</label>
        <sharedTo>
            <role>Hirep_MAPV_ACDL</role>
        </sharedTo>
        <criteriaItems>
