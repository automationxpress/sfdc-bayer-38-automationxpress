<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Resource_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <description>User Entry Approval process when Deputy Manager field is empty.</description>
    <emailTemplate>UMA_Email_Templates/User_Entry_Approval_Request_Email_Notification_New</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(Is_Bayer_User__c = false, Is_Locked__c = false, ISBLANK(Deputy_Manager__c ) )</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_alert_to_notify_when_User_Entry_record_gets_approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_Field_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_alert_to_notify_when_User_Entry_record_gets_rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_Field_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Approval_Status_Field_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>User Entry Approval For Non-Bayer</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Update_Approval_Status_Field_to_None</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
